{>"cms/core/fullscreen"/}

{<body}
    <div class="image-manager">
        <div class="sidebar">
            <h5>Search</h5>
            <button data-lky-hook="filter">filter</button>
            <button data-lky-hook="reset">reset</button>
            <input type="search" data-lky-hook="search"/>
            <h5>Add from URL</h5>
            <input type="url" data-lky-hook="url"/>
            <button data-lky-hook="add">add</button>
            <button data-lky-hook="remove">remove</button>
            <button data-lky-hook="alternative">add alternative</button>
            <button data-lky-hook="save">save</button>
            <div data-lky-hook="alternatives" data-lky-template="cms/cms/alternative.list">
            </div>
            <h5>Photo Source</h5>
            <div data-lky-hook="dropZone" >drop here</div>
            <button data-lky-hook="use">apply</button>
            <button data-lky-hook="close">cancel</button>
            <button data-lky-hook="prev">&laquo</button>
            <button data-lky-hook="next">&raquo</button>
            <div data-lky-hook="list" data-lky-template="cms/cms/imagelist">
            </div>

        </div>
        <div data-lky-hook="preview">
        </div>
    </div>
{/body}
